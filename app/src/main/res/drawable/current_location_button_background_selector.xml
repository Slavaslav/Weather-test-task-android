<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_selected="false">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="@color/current_location_button_color" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="@color/current_location_button_color_selected" />
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <selector>
            <item android:state_pressed="false">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="@color/current_location_button_color_pressed" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>

